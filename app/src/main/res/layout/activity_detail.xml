<?xml version="1.0" encoding="utf-8"?>

<!-- 데이터 바인딩을 하기위한 xml에 <layout></layout>으로 감사 줘야한다. -->
<layout>

    <!-- 데이터 바인딩을 사용하기 때문에 XML 안에서 변수 선언 가능 -->
    <!-- 변수명으로 접근하기 때문에 View 마다 일일이 id를 부여할 필요가 없다. -->
    <data>

        <variable
            name="id"
            type="int" />

        <variable
            name="name"
            type="String" />

        <variable
            name="imgUrl"
            type="String" />

    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 아래 numberText의 사용 법을 별개 class 파일에 정의 해주면 사용 가능 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
                android:textStyle="bold"
                app:numberText="@{id}" />

            <!-- 데이터 바인딩을 사용하기 때문에 "@+id/~~" 대신 변수명으로 접근, 사용 가능  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="@{name}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- app:imgUrl="@{imgUrl}" 으로 적는다고 곧바로 {} 중괄호 안에 url을 곧바로 사용할 수 없다  -->
                <!-- HTML 처럼 사용하기 위해서는 app:imgUrl의 imgUrl을 class 파일에 정의 해줘야 한다.  -->
                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:scaleType="centerCrop"
                    app:imgUrl="@{imgUrl}"
                    app:layout_constraintDimensionRatio="H,1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- binding과 변수 선언 덕분에 HTML 처럼 직접 이미지 주소를 넣을 수도 있다.  -->
            <!--주소값에 "&"가 있으면 "&amp" 으로 바꿔줘야 한다.   -->
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                app:imgUrl="@{`https://img1.daumcdn.net/thumb/R1280x0/?scode=mtistory2&amp;fname=https%3A%2F%2Fblog.kakaocdn.net%2Fdn%2FvgdnN%2Fbtq09ypXFWH%2FLpb5S9NTKYIja33kWhTVe0%2Fimg.png`}" />

        </LinearLayout>

    </ScrollView>


</layout>